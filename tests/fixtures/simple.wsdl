<?xml version="1.0" encoding="UTF-8"?>
<!-- Minimal WSDL fixture that embeds a schema via xs:include -->
<definitions
  xmlns="http://schemas.xmlsoap.org/wsdl/"
  xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
  xmlns:xsd="http://www.w3.org/2001/XMLSchema"
  name="SimpleService"
  targetNamespace="http://example.com/simple">

  <types>
    <xsd:schema targetNamespace="http://example.com/simple">
      <xsd:include schemaLocation="simple.xsd"/>
    </xsd:schema>
  </types>

  <message name="PersonRequest">
    <part name="parameters" element="xsd:person"/>
  </message>

  <portType name="SimplePortType">
    <operation name="getPerson">
      <input message="tns:PersonRequest"/>
    </operation>
  </portType>

</definitions>
