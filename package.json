{
  "name": "json-xsd-to-xml",
  "version": "0.2.0",
  "description": "Convert a JSON object to an XML string guided by an XSD schema",
  "keywords": [
    "json",
    "xml",
    "xsd",
    "schema",
    "converter",
    "xml-builder",
    "typescript"
  ],
  "homepage": "https://github.com/rattones/json-xsd-to-xml#readme",
  "bugs": {
    "url": "https://github.com/rattones/json-xsd-to-xml/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rattones/json-xsd-to-xml.git"
  },
  "license": "MIT",
  "author": "Marcelo Ratton",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "directories": {
    "test": "tests"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:functional": "vitest run tests/functional.test.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check src tests",
    "lint:fix": "biome check --write src tests",
    "format": "biome format --write src tests",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "fast-xml-parser": "^5.4.1",
    "xmlbuilder2": "^4.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^25.3.0",
    "@vitest/coverage-v8": "^3.0.7",
    "tsup": "^8.5.1",
    "typescript": "^5.7.3",
    "vitest": "^3.0.7"
  },
  "engines": {
    "node": ">=18"
  },
  "module": "./dist/index.mjs",
  "sideEffects": false
}
